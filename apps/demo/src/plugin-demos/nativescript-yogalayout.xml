<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:yg="@triniwiz/nativescript-yogalayout"
      navigatingTo="navigatingTo" class="page">
  <Page.actionBar>
    <ActionBar title="nativescript-yogalayout" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <yg:View style="width:200; height:200;margin: 24;">
    <Image stretch="aspectFill" style="width: 200; height: 200; position: absolute;"
           src="https://source.unsplash.com/random"/>
    <yg:View style="align-self:flex-end;flex: 1; background-color: rgba(0, 0, 0, 0.5);">
      <Label style="color:white; font-size: 20; margin: 6;" text="Title"/>
      <Label style="color:white; margin: 6;" text="Subtitle"/>
    </yg:View>
  </yg:View>
</Page>
