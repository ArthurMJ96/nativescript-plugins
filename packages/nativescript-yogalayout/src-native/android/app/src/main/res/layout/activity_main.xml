<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:yoga="http://schemas.android.com/apk/res-auto"
  >
  <com.facebook.yoga.android.YogaLayout
    android:layout_height="500dp"
    android:layout_width="match_parent"
    yoga:yg_width="auto"
    yoga:yg_height="500dp"
    yoga:yg_flexDirection="row"
    yoga:yg_justifyContent="space_between"
    yoga:yg_alignItems="flex_start"
    yoga:yg_alignSelf="center"
    yoga:yg_paddingAll="20"
    android:background="@color/black"
    yoga:yg_flex="1.0"
    >

    <com.facebook.yoga.android.YogaLayout
      android:layout_height="10dp"
      android:layout_width="100dp"
      yoga:yg_width="10dp"
      yoga:yg_height="100dp"
      android:background="@android:color/holo_red_dark"
      yoga:yg_flex="1.0"
      >

    </com.facebook.yoga.android.YogaLayout>


    <com.facebook.yoga.android.YogaLayout
      android:background="@android:color/holo_blue_dark"
      yoga:yg_flex="1.0"
      android:layout_height="10dp"
      android:layout_width="100dp"
      yoga:yg_width="10dp"
      yoga:yg_height="100dp"
      >

    </com.facebook.yoga.android.YogaLayout>

  </com.facebook.yoga.android.YogaLayout>
</FrameLayout>


